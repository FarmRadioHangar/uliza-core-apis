{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext.asynciterable"
    ],
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,                       
    "removeComments": true,
    "noImplicitAny": true,                
    "strictNullChecks": true,             
    "noImplicitThis": true,               
    "alwaysStrict": true,                 
    "inlineSourceMap": true, 
    "inlineSources": true, 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext.asynciterable"
    ],
    "rootDir": ".",
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "inlineSourceMap": true, 
    "inlineSources": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "bin"
  ]
}
